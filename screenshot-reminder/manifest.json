  {
    "name": "Getting Started Example",
    "version": "1.0",
    "permissions": ["storage", "tabs"],
    "description": "Custom",
    "manifest_version": 2,
    "web_accessible_resources": [
        "images/*.jpg",
        "images/*.png"
    ],
    "content_scripts": [
    	{
    		"matches": [
    			"<all_urls>"
    		],
    		"js": ["content.js", "html2canvas.js"]
    	}
    ],
    "background": {
    	"scripts": ["background.js"]
    },
    "browser_action": {
    	"default_icon": "icons/icon.png",
    	"default_popup": "popup.html",
    	"default_title": "yeap"
    }
  }